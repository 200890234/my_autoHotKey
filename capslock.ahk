;=====================================================================o
;                       CapsLock Initializer                         ;|
;---------------------------------------------------------------------o
SetCapsLockState, AlwaysOff                                          ;|
;---------------------------------------------------------------------o
;=====================================================================o
;                     CapsLock singlekey-right                       ;|
;---------------------------------------------------------------------o
CapsLock::Send, {Right}                                              ;|
;---------------------------------------------------------------------o
;=====================================================================o
;                     CapsLock singlekey-left                        ;|
;---------------------------------------------------------------------o
CapsLock & shift::                                                   ;|
if GetKeyState("control") = 0                                        ;|
{                                                                    ;|
    if GetKeyState("alt") = 0                                        ;|
        Send, {Left}                                                 ;|
    else                                                             ;|
        Send, +{Left}                                                ;|
    return                                                           ;|
}                                                                    ;|
else {                                                               ;|
    if GetKeyState("alt") = 0                                        ;|
        Send, ^{Left}                                                ;|
    else                                                             ;|
        Send, +^{Left}                                               ;|
    return                                                           ;|
}                                                                    ;|
return                                                               ;|
